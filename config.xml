<?xml version='1.0' encoding='utf-8'?>
<widget id="com.prog.bookworm" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Book Worm</name>
    <description>
        Keep track of books you have and/or want to read.
    </description>
    <author email="dfusari5799@coenstogac.on.ca, rbimm5674@conestogac.on.ca" href="http://bimmr.com">
        Derek Fusari and Randy Bimm
    </author>
    <icon src="www/img/icon.png"/>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
